<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:FerryBookingMAUI.ViewModels"
             x:Class="FerryBookingMAUI.Views.MainPage"
             Title="Dashboard">

    <ContentPage.BindingContext>
        <vm:MainViewModel />
    </ContentPage.BindingContext>

    <StackLayout Padding="10">
        <Label Text="Dashboard" FontAttributes="Bold" FontSize="24" HorizontalOptions="Center" />

        <Button Text="Manage Ferries" Command="{Binding NavigateToFerryManagementCommand}" />
        <Button Text="Manage Cars" Command="{Binding NavigateToCarManagementCommand}" />
        <Button Text="Manage Guests" Command="{Binding NavigateToGuestManagementCommand}" />
    </StackLayout>

</ContentPage>
