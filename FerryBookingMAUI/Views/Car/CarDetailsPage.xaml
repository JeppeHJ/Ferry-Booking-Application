<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:FerryBookingMAUI.ViewModels.Cars"
             x:Class="FerryBookingMAUI.Views.Car.CarDetailsPage"
             Title="Car Details">

    <ContentPage.BindingContext>
        <vm:CarDetailsViewModel />
    </ContentPage.BindingContext>

    <StackLayout Padding="10">
        <Label Text="Registration Plate:" FontAttributes="Bold"/>
        <Label Text="{Binding SelectedCar.RegistrationPlate}" FontSize="Medium"/>

        <Label Text="Guests:" FontAttributes="Bold" FontSize="Medium" Margin="0,10,0,0"/>
        <CollectionView ItemsSource="{Binding Guests}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <StackLayout Orientation="Vertical" Padding="5">
                        <Label Text="{Binding Name}" FontAttributes="Bold"/>
                        <Label Text="{Binding Age, StringFormat='Age: {0}'}"/>
                        <Label Text="{Binding Gender, StringFormat='Gender: {0}'}"/>
                    </StackLayout>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </StackLayout>
</ContentPage>
