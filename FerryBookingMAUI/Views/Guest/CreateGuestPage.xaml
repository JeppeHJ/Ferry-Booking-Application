<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:FerryBookingMAUI.ViewModels.Guests"
             x:Class="FerryBookingMAUI.Views.Guest.CreateGuestPage"
             Title="Create Guest">

    <ContentPage.BindingContext>
        <vm:CreateGuestViewModel />
    </ContentPage.BindingContext>

    <StackLayout Padding="10">
        <Label Text="Name:" FontAttributes="Bold" />
        <Entry Placeholder="Name" Text="{Binding NewGuest.Name}" />

        <Label Text="Age:" FontAttributes="Bold" Margin="0,10,0,0" />
        <Entry Placeholder="Age" Text="{Binding NewGuest.Age}" Keyboard="Numeric" />

        <Label Text="Gender:" FontAttributes="Bold" Margin="0,10,0,0" />
        <Picker Title="Gender" ItemsSource="{Binding Genders}" SelectedItem="{Binding NewGuest.Gender}" />

        <Button Text="Save" Command="{Binding SaveGuestCommand}" Margin="0,20,0,0" />
    </StackLayout>
</ContentPage>
