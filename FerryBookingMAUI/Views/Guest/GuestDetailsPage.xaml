<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:FerryBookingMAUI.ViewModels.Guests"
             x:Class="FerryBookingMAUI.Views.Guest.GuestDetailsPage"
             Title="Guest Details">

    <ContentPage.BindingContext>
        <vm:GuestDetailsViewModel />
    </ContentPage.BindingContext>

    <StackLayout Padding="10">
        <Label Text="{Binding SelectedGuest.Name}" FontAttributes="Bold" />
        <Label Text="Age:" />
        <Label Text="{Binding SelectedGuest.Age}" />
        <Label Text="Gender:" />
        <Label Text="{Binding SelectedGuest.Gender}" />
        <Button Text="Edit" Command="{Binding EditGuestCommand}" />
    </StackLayout>
</ContentPage>
