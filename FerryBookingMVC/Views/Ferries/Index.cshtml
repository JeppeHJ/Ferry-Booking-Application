@model IEnumerable<FerryBookingModels.Ferry>

@{
    ViewData["Title"] = "Manage Ferries";
}

<h1>Manage Ferries</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Id)</th>
            <th>@Html.DisplayNameFor(model => model.MaxGuests)</th>
            <th>@Html.DisplayNameFor(model => model.MaxCars)</th>
            <th>@Html.DisplayNameFor(model => model.PricePerCar)</th>
            <th>@Html.DisplayNameFor(model => model.PricePerGuest)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Id)</td>
                <td>@Html.DisplayFor(modelItem => item.MaxGuests)</td>
                <td>@Html.DisplayFor(modelItem => item.MaxCars)</td>
                <td>@Html.DisplayFor(modelItem => item.PricePerCar)</td>
                <td>@Html.DisplayFor(modelItem => item.PricePerGuest)</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
